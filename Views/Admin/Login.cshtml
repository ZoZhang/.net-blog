@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="Un blog Dot net MVC">
  <meta name="author" content="Zhao ZHANG - zo.zhang@gmail.com">
  <title>@ViewBag.Title - .Net Blog MVC</title>
  @Styles.Render("~/Content/css")
  @Scripts.Render("~/bundles/modernizr")
</head>
<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
       @Html.ActionLink(".Net Blog MVC", "Index", "Home", null, new { @class= "navbar-brand"})
    </div>
  </nav>

    <header class="masthead @ViewBag.PageClass">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="site-heading">
                <h1>Administration</h1>
                <span class="subheading"></span>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Main Content -->
      <div class="col-lg-8 col-md-10 mx-auto">
         <p id="alert-message" class="input-message alert d-none"></p>
         <div class="wrapper">
           <div class="form-style1" id="formLoginContent">
             <!-- Login Form -->
             <form  id="form-login" method="post">
               <input type="email" id="email" class=" second" name="email" placeholder="Votre adresse email" required>
               <input type="password" id="password" class=" third" name="password" placeholder="Votre mot de passe" required>
               <br/>
               <input type="submit" class="x fourth" id="login-submit" value="Se connecter">
             </form>
           </div>
         </div>
      </div>
      <hr>

      <!-- Footer -->
      <footer>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <p class="copyright text-muted">Projet .Net MVC - Zhao ZHANG</p>
            </div>
          </div>
        </div>
      </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
