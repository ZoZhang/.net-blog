<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="Un blog Dot net MVC">
  <meta name="author" content="Zhao ZHANG - zo.zhang@gmail.com">
  <title>@ViewBag.Title - .Net Blog MVC</title>
  @Styles.Render("~/Content/css")
  @Scripts.Render("~/bundles/modernizr")
<body>

<aside id="left-panel" class="left-panel">
    <nav class="navbar-backend navbar-expand-sm navbar-default">
        <div id="main-menu" class="main-menu collapse navbar-collapse">
            <ul class="nav navbar-nav">

                 <li class="@(ViewBag.Page == "article"?"active":"")">
                    <a class= "navbar-brand" href="@Url.Action("Index", "Article")">
                        <i class="fa fa-newspaper-o"></i>Article
                    </a>
                 </li>

                 <li class="@(ViewBag.Page == "category"?"active":"")">
                    <a class= "navbar-brand" href="@Url.Action("Index", "Category")">
                        <i class="fa fa-table"></i>Catégorie
                    </a>
                 </li>

                 @if (ViewBag.isAdmin == true)
                 {
                  <li class="@(ViewBag.Page == "dashboard"?"active":"")">
                    <a class= "navbar-brand" href="@Url.Action("Index", "Admin")">
                        <i class="fa fa-home"></i>Utilisateur
                    </a>
                  </li>

                  <li class="@(ViewBag.Page == "comments"?"active":"")">
                     <a class= "navbar-brand" href="@Url.Action("Index", "Comments")">
                         <i class="fa fa-comments"></i>Commentaires
                     </a>
                  </li>
                 }
            </ul>
        </div>
    </nav>
</aside>

<div id="right-panel" class="right-panel">
    <header id="header" class="header">

        <div class="top-left">
            <div class="navbar-header">
              <a class="navbar-brand" target="_blank" href="@Url.Action("Index", "Home")">
                .Net Blog MVC
              </a>
            </div>
        </div>

        <div class="top-right">
            <div class="navbar-brand text-left float-left">Bienvue,  @ViewBag.user</div>
            <div class="header-menu pt-2">
                <a class="btn btn-danger" href="/Admin/Logout" title="Déconnexion"><span>Déconnexion</span></a>
            </div>
        </div>
    </header>

    <div class="content pb-0">
        <div class="row">
            <div class="col-lg-12">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
    <!-- Footer -->
      <footer>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <p class="copyright text-muted">Projet .Net MVC - Zhao ZHANG</p>
            </div>
          </div>
        </div>
      </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
