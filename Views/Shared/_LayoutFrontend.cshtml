<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="Un blog Dot net MVC">
  <meta name="author" content="Zhao ZHANG - zo.zhang@gmail.com">
  <title>@ViewBag.Title - .Net Blog MVC</title>
  @Styles.Render("~/Content/css")
  @Scripts.Render("~/bundles/modernizr")
</head>
<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                     .Net Blog MVC
      </a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <i class="fa fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
                @Html.ActionLink("Page d'accueil", "Index", "Home", null, new { @class= "nav-link"})
          </li>
              @Html.Action("ShowCategoryMenus", "Home")
          <li class="nav-item">
                @Html.ActionLink("Administration", "Index", "Admin", null, new { @class= "nav-link"})
          </li>
        </ul>
      </div>
    </div>
  </nav>

    @RenderBody()

  <hr>

      <!-- Footer -->
      <footer>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <p class="copyright text-muted">Projet .Net MVC - Zhao ZHANG</p>
            </div>
          </div>
        </div>
      </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
